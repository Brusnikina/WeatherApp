<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="3"
    android:layout_gravity="fill"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_current_weather"
        android:layout_rowSpan="3"
        tools:src="@android:drawable/btn_plus"
        />

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_rowSpan="3"
        android:gravity="center_horizontal"
        android:layout_gravity="fill"
        android:textSize="48sp"
        android:text=""
        tools:text="+15"/>

    <TextView
        android:id="@+id/tv_current_wind_speed"
        android:textSize="16sp"
        android:text=""
        tools:text="2 m/s"
        app:drawableLeftCompat="@drawable/outline_air_white_18"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_current_pressure"
        android:textSize="16sp"
        android:text=""
        tools:text="738 mm"
        app:drawableLeftCompat="@drawable/outline_speed_white_18"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/yv_current_humidity"
        android:textSize="16sp"
        android:text=""
        tools:text="68%"
        app:drawableLeftCompat="@drawable/outline_water_drop_white_18"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_current_description"
        android:layout_columnSpan="3"
        android:gravity="center"
        android:layout_gravity="fill"
        android:textSize="20sp"
        android:text=""
        tools:text="cloudly"/>

    <TextView
        android:id="@+id/tv_current_feels_like"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:gravity="center"
        android:textSize="16sp"
        android:text=""
        tools:text="feels like +12"/>

</GridLayout>